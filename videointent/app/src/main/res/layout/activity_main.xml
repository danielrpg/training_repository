<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20"
        android:layout_marginTop="15"
        android:layout_marginRight="20"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/ht_please_enter"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAct2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20"
        android:layout_marginTop="15"
        android:layout_marginRight="20"
        android:background="@color/colorPrimary"
        android:text="@string/bt_text1"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnAct3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20"
        android:layout_marginTop="15"
        android:layout_marginRight="20"
        android:background="@color/colorPrimary"
        android:text="@string/btn_text2"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20"
        android:layout_marginTop="15"
        android:layout_marginRight="20" />
</LinearLayout>